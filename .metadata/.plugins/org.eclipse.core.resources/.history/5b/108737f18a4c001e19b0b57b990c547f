package Inheritance1;

public class Student extends People{
	private int id;
	private String lop,truong,startTime,startDo,level;
	
	public Student() {
		super();
	}
	
	public Student(String name,String gender) {
		this(name, gender, id, id, gender, gender, name, gender);	
	}
	
	public Student(String name, String gender, int age, int id, String lop, String truong, String startTime,
			String startDo) {
		super(name, gender, age);
		this.id = id;
		this.lop = lop;
		this.truong = truong;
		this.startTime = startTime;
		this.startDo = startDo;
		
		if(age>=6 && age<=10) {
			this.level = "cấp 1";
		}else if(age>10 && age<=14) {
			this.level = "cấp 2";
		}else if(age>14 && age<=16) {
			this.level = "cấp 3";
		}else {
			this.level = "đại học và đi làm";
		}
	}
	
	public void gioDiHoc() {
		System.out.println("Giờ vào lớp lúc "+startTime);
	}
	
	public void gioHocBai() {
		System.out.println("Giờ làm bài bắt đầu lúc "+startDo);
	}
}
package Inheritance1;

public class People {
	private String name, gender;
	private int age;
	
	public People() {
	}
	
	public People(String name, String gender, int age) {
		super();
		this.name = name;
		this.gender = gender;
		this.age = age;
	}
	
	
	@Override
	public String toString() {
		return "People [name=" + name + ", gender=" + gender + "]";
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getGender() {
		return gender;
	}

	public void setGender(String gender) {
		this.gender = gender;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public void an() {
		System.out.println("Cơm là 1 trong những thức ăn của người VIệt Nam.");
	}
	
	public void ngu() {
		System.out.println("Mọi người đều cần phải ngủ để hồi phục sức khỏe.");
	}
}